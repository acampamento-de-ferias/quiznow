<div class="title-section">
    <h3 class="title text-center">Criar pergunta</h3>
    <div class="secondary-divider"></div>
    <div class="form-group default-form-group">
        <label for="question-title">TÃ­tulo</label>
        <textarea class="form-control shadow-none" id="question-title" cols="30" rows="3" minlength="8" maxlength="150" placeholder="8-150 caracteres"></textarea>
    </div>
</div>

<div class="answers-section">
    <h4 class="subtitle">Respostas</h4>
    <div class="answer right-answer form-group default-form-group">
        <input type="text" class="form-control shadow-none">
        <div class="right-bg">
            <img src="./images/check.png" class="right-icon" alt="Correta">
        </div>
    </div>
    <div class="answer wrong-answer form-group default-form-group">
        <input type="text" class="form-control shadow-none">
        <div class="wrong-bg">
            <img src="./images/close.png" class="wrong-icon" alt="Errada">
        </div>
    </div>
    <div class="secondary-button">
        <button class="btn shadow-none">
            <img class="plus-icon" src="./images/plus.png" alt="Adicionar resposta">
            Adicionar resposta
        </button>
    </div>
</div>

<div class="actions-section fixed-bottom">
    <div class="primary-button text-center">
        <button class="btn shadow-none">Salvar</button>
        <a href="#" id="cancel-question" class="small-text">Cancelar</a>
    </div>
</div>