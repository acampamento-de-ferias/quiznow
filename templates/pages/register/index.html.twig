{% extends "components/base.html.twig" %}

{% block title %} Registro de usuário {% endblock %}

{% block head %}
    <link type="text/css" rel="stylesheet" href="./css/pages/register.css" />
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="container p-4">
        <img class="img-fluid px-4" title="Logo QuizNow" src="./images/logo-quiznow.png" />
        <div class="card my-3 p-3">
            <form>
                <h3 class="register-title text-center"> Crie sua conta </h3>
                <div class="form-group default-form-group py-2">
                    <label for="registerName" class="pb-2">Nome</label>
                    <i class="fas icon"></i>
                    <input 
                        type="text" 
                        class="form-control shadow-none" 
                        formControl="name"
                        id="registerName" 
                        onblur="validateName(event, {{ usernameMinCharacteres }})" 
                        onFocus="handleFocusInput(event)" 
                        maxlength="120" 
                        required>
                    <span class="error-message"></span>
                </div>
                <div class="form-group default-form-group py-2">
                    <label for="registerEmail" class="pb-2">E-mail</label>
                    <i class="fas icon"></i>
                    <input 
                        type="email" 
                        class="form-control shadow-none" 
                        formControl="email"
                        id="registerEmail"
                        onblur="validateEmail(event)" 
                        onFocus="handleFocusInput(event)"  
                        maxlength="256" 
                        required>
                    <span class="error-message"></span>

                </div>
                <div class="form-group default-form-group py-2">
                    <label for="registerPassword" class="pb-2">Senha</label>
                    <i class="fas fa-eye existing-icon" onclick="handleInputType(event)"></i>
                    <input 
                        type="password" 
                        class="form-control shadow-none" 
                        formControl="password"
                        id="registerPassword"
                        onblur="validatePassword(event, {{ passwordMinCharacteres }})" 
                        onFocus="handleFocusInput(event)"  
                        maxlength="32" 
                        placeholder="8-32 caracteres" 
                        required>
                    <span class="error-message"></span>
                </div>
                <div class="form-group default-form-group py-2">
                    <label for="registerPassword" class="pb-2">Confirmar Senha</label>
                    <i class="fas fa-eye existing-icon" onclick="handleInputType(event)"></i>
                    <input 
                        type="password" 
                        class="form-control shadow-none" 
                        id="registerPasswordConfirmation" 
                        formControl="passwordConfirmation"
                        onblur="validatePasswordConfirmation(event, {{ passwordMinCharacteres }})" 
                        onFocus="handleFocusInput(event)"
                        maxlength="32" 
                        required>
                    <span class="error-message"></span>
                </div>

                <button type="submit" class="btn default-button mt-3 mb-2" disabled> Cadastrar </button>
            </form>
        </div>
        <div class="row text-center">
            <div class="col">
                <span class="hasAccount">Já tem uma conta? 
                    <a href="{{ url }}/login" class="login"> Entre </a>
                </span>
            </div>
        </div>
    </div>
    
{% endblock %}

{% block scripts %}
    <script src="./js/all/validation.js"></script>
    <script src="./js/pages/register.js"></script>
{% endblock %}
